<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quran.com</title>

    <link rel="stylesheet" href="css/style.css" />

    <!-- remix icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&family=Roboto:wght@300;400;500;700;900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="header">
      <a href="/">Quran.com</a>
    </header>

    <main class="main">
      <div class="container">
        <div class="verse__cards">
          <% surah.verses.forEach((verse) => { %>
          <div class="verse__card">
            <div class="left">
              <div class="btns">
                <button><%= surah.id + ":" + verse.id %></button>
                <button><i class="ri-play-line"></i></button>
                <button><i class="ri-book-open-line"></i></button>
                <button><i class="ri-chat-3-line"></i></button>
                <button><i class="ri-more-line"></i></button>
              </div>
            </div>

            <div class="right">
              <div class="ar__text"><%= verse.text %></div>
              <div class="en__translation"><%= verse.translation %></div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>

    <script src="js/surah.js"></script>
  </body>
</html>
